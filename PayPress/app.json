{
  "expo": {
    "name": "PayCoin",
    "slug": "PayCoin",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "paypcoin",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/mainLogo.png",
        "backgroundColor": "#0B57BD"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.marvtech.PayCoin"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/mainLogo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/mainLogo.png",

          "resizeMode": "contain",
          "backgroundColor": "#0B57BD"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
